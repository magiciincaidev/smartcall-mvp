# SmartCall MVP Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ================================================
# SUPABASE CONFIGURATION
# ================================================
# Get these values from: https://supabase.com/dashboard/project/[your-project]/settings/api

# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anon/public key (safe to expose in frontend)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# Your Supabase service role key (KEEP SECRET - server-side only)
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key-here

# ================================================
# GOOGLE CLOUD CONFIGURATION
# ================================================
# Get these from: https://console.cloud.google.com

# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id

# Path to your Google Cloud service account JSON file
# Download from: Cloud Console > IAM & Admin > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./config/google-cloud-credentials.json

# Alternative: Google Cloud credentials as base64 string (for deployment)
# GOOGLE_APPLICATION_CREDENTIALS_BASE64=base64-encoded-json-here

# ================================================
# GEMINI AI CONFIGURATION
# ================================================
# Get your API key from: https://aistudio.google.com/app/apikey

# Your Gemini API key
GEMINI_API_KEY=AIza-your-gemini-api-key-here

# Gemini model version (optional)
GEMINI_MODEL=gemini-1.5-flash

# ================================================
# WEBRTC CONFIGURATION
# ================================================
# STUN server for WebRTC connection (public, no auth needed)
NEXT_PUBLIC_STUN_SERVER=stun:stun.l.google.com:19302

# TURN server for WebRTC (optional, for better connectivity)
NEXT_PUBLIC_TURN_SERVER=turn:your-turn-server:3478
NEXT_PUBLIC_TURN_USERNAME=your-turn-username
NEXT_PUBLIC_TURN_CREDENTIAL=your-turn-password

# Alternative STUN/TURN servers (uncomment if needed)
# NEXT_PUBLIC_STUN_SERVER=stun:stun1.l.google.com:19302
# NEXT_PUBLIC_TURN_SERVER=turn:openrelay.metered.ca:80

# ================================================
# APPLICATION CONFIGURATION
# ================================================
# Application environment
NODE_ENV=development

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Maximum concurrent call sessions (for rate limiting)
MAX_CONCURRENT_CALLS=10

# AI response timeout (in milliseconds)
AI_RESPONSE_TIMEOUT=5000

# Speech recognition timeout (in milliseconds)
SPEECH_TIMEOUT=10000

# ================================================
# OPTIONAL: MONITORING & ANALYTICS
# ================================================
# Vercel Analytics (if deployed on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# PostHog analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry error tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
# SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ================================================
# DEVELOPMENT ONLY
# ================================================
# Enable debug logging in development
DEBUG_MODE=true

# Enable mock data for testing without APIs
# ENABLE_MOCK_MODE=false

# Skip API validations in development
# SKIP_API_VALIDATION=true

# ================================================
# SECURITY SETTINGS (PRODUCTION)
# ================================================
# Allowed origins for CORS (production only)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# JWT secret for additional authentication (if needed)
# JWT_SECRET=your-super-secure-jwt-secret-here

# API rate limiting (requests per minute)
# API_RATE_LIMIT=100

# Enable/disable certain features in production
# ENABLE_DEMO_MODE=false
# ENABLE_DEBUG_PANEL=false